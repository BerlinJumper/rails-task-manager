<h1>Tasks</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li>


       <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>

      <%= link_to task.title, task_path(task) %>
    </li>
    <%= link_to  delete_task_url(task), method: :delete, data: { confirm: "Are you sure?" } do %> <i class="far fa-trash-alt"></i>
    <% end %>
    <% end %>
  </ul>


<p><%= link_to "Add new task", new_task_path%></p>


